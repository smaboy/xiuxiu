<?xml version="1.0" encoding="utf-8"?>
    <!--shape的形状，默认为矩形，可以设置为矩形（rectangle）、椭圆形(oval)、线性形状(line)、环形(ring)-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <!--&lt;!&ndash;圆弧半径&ndash;&gt;-->
    <corners android:radius="6dp"/>

    <!--边界间距-->

    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp"/>

    <stroke android:color="@color/btn_blue_pressed"
        android:width="1dp"/>

    <solid android:color="@color/btn_blue_normal"/>


</shape>