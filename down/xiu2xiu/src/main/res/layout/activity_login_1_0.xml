<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/iv_login_register_background"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login3"/>

    <include layout="@layout/item_login" />
    <include layout="@layout/item_register" />
    <Switch
        android:id="@+id/switch_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/xx_write_tobar"
        android:text="登录"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#fff"
        android:padding="10dp"
        android:id="@+id/ll_progress"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在登录中..."
            />


    </LinearLayout>


</FrameLayout>

