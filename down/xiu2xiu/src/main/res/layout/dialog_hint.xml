<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout
        android:id="@+id/fl_dialog_hint_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000"/>

    <LinearLayout
        android:id="@+id/ll_dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@drawable/retangle_c5_solid_white_shape"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            tools:text="确认手机号码"
            android:textSize="16sp"
            android:textColor="@color/login_register_black"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="我们将发送验证码短信到这个手机号码:123435666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/login_register_blue"
                android:padding="15dp"
                android:background="@drawable/btn_pressed_changed_shape"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sure"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/login_register_blue"
                android:padding="15dp"
                android:background="@drawable/btn_pressed_changed_shape"/>


        </LinearLayout>





    </LinearLayout>





</FrameLayout>