<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_title_height"
    android:background="@color/xx_black_tobar"
    android:gravity="center_vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/rl_toobar"
    >

    <!--android:fitsSystemWindows="true"-->
    <!--android:clipToPadding="true"-->
    <!--沉浸式状态栏-->


    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/user_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/man2"
        />

    <LinearLayout
        android:id="@+id/ll_mul_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/round_retangle_shape"
        android:visibility="visible">

        <TextView
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="微信精选"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/left_round_retangle_black_shape"
            />

        <!--<TextView-->
            <!--android:layout_width="2dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/black_deep"/>-->
        <TextView
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="笑话大全"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_deep"/>


    </LinearLayout>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text1"
        android:textColor="#fff"
        android:textSize="@dimen/activity_title_text_size"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>