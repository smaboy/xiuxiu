        <android.support.design.widget.TabLayout
            android:id="@+id/looking_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xx_write_tobar"
            app:tabIndicatorColor="@color/xx_black_tobar"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/xx_black_tobar"
            app:tabTextColor="@color/xx_gray_tobar" />
        <!--设置文字的外貌-->
        <!--app:tabTextAppearance="@android:style/TextAppearance.DeviceDefault.Widget.IconMenu.Item"-->


        <android.support.v4.view.ViewPager
            android:id="@+id/looking_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />



    </LinearLayout>


</FrameLayout>


